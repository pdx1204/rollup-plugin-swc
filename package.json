{
  "name": "@qiuqfang/rollup-plugin-swc",
  "version": "0.0.7",
  "description": "The one plugin uses swc to compile and minimize code in rollup",
  "keywords": [
    "rollup",
    "swc",
    "rollup-plugin-swc"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rollup -c",
    "example": "pnpm build && pnpm -C ./example build",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    "commit": "cz"
  },
  "type": "module",
  "main": "./dist/index.mjs",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "author": "Quincy Qiu",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@qiuqfang/eslint-config": "^0.0.6",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.36.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.7",
    "rollup": "^3.15.0",
    "rollup-plugin-delete": "^2.0.0",
    "tslib": "^2.5.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@swc/core": "^1.3.35"
  },
  "peerDependencies": {
    "rollup": ">=3.15.0",
    "@swc/core": ">=1.3.35"
  },
  "directories": {
    "example": "example"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiuqfang/rollup-plugin-swc.git"
  },
  "bugs": {
    "url": "https://github.com/qiuqfang/rollup-plugin-swc/issues"
  },
  "homepage": "https://github.com/qiuqfang/rollup-plugin-swc#readme",
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "src/**/*.*": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
